<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="HowToBBQXAMLSample.Views.BBQRecipesPage"
              xmlns:local="clr-namespace:HowToBBQXAMLSample.Views;assembly=HowToBBQXAMLSample"
             Title="BBQ Recipes">
  <ListView x:Name="list" ItemsSource="{Binding Recipes}" ItemTapped="OnItemSelected">
    <ListView.ItemTemplate>
      <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" Spacing="25" >
               <Image Source="{Binding Image}" 
                      WidthRequest="40"
                     HeightRequest="40" />
               <Label Font = "18" Text="{Binding Name}"  />
           </StackLayout>
         </ViewCell> 
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>