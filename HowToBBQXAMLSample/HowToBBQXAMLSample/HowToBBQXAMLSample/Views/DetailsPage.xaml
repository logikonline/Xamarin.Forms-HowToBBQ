<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="HowToBBQXAMLSample.Views.DetailsPage"
             xmlns:local="clr-namespace:HowToBBQXAMLSample;assembly=HowToBBQXAMLSample"
             Title="{Binding Name}">
  <ContentPage.Resources>
    <ResourceDictionary>
      <local:StringFormatConverter x:Key="stringFormatConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>
  
  <ScrollView Padding="20">
    <StackLayout VerticalOptions="FillAndExpand" Spacing="10">
       <Image Source="{Binding Image}"  VerticalOptions="FillAndExpand" Aspect="AspectFit"/>
      <StackLayout Orientation="Horizontal">
        <Label Text="PrepTime:"
              HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding PrepTime Converter={StaticResource stringFormatConverter}}"
               Font="Small" />
      </StackLayout>
       <Label Text="{Binding TotalTime}"/>
       <Label Text="{Binding Serves}"/>
       <Label Text="{Binding Ingredients}"/>
       <Label Text="{Binding Directions}"/>
    </StackLayout>
  </ScrollView>
</ContentPage>